extends layout
block content
  header 
      nav(class="flex flex-col items-center justify-between md_flex-row  py-4 px-6 bg-white shadow w-full")
          div(class="mb-2") 
            a(href='/' class="text-2xl no-underline text-gray-700 hover_text-blue-500") MembersOnly
          if !currentUser  
            ul(class=" list-none flex items-center justify-between gap-3")
              li
                a(href='/sign-up' class=" bg-cyan-400 text-white px-6 py-2 hover_bg-cyan-500 rounded") Sign Up
              li
                a(href='/log-in' class=" bg-cyan-400 text-white px-6 py-2 hover_bg-cyan-500 rounded") Log in     
          else if currentUser 
            ul(class=" list-none flex items-center justify-between gap-3")
              li 
                a(href=currentUser.url class="text-lg no-underline text-gray-700 hover_text-blue-500") #{currentUser.username}
              li
                a(href="/memberForm" class="text-lg no-underline text-gray-700 hover_text-blue-500") Membership
              li
                a(href="/log-out" class=" bg-red-400 text-white px-6 py-2 hover_bg-red-500 rounded") Log out